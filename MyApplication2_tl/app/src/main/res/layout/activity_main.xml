<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Utransloc"
    android:longClickable="true"
    android:padding="20dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your alarm"
        android:id="@+id/button"
        android:height="100dp"
        android:width="320dp"
        android:textSize="28dp"
        android:textColor="#ffffffff"
        android:background="#ff008080"
        android:clickable="true"
        android:onClick="buttonOnClick"
        android:layout_above="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit your alarm"
        android:id="@+id/button2"
        android:width="320dp"
        android:height="100dp"
        android:focusableInTouchMode="true"
        android:textSize="28dp"
        android:background="#ff008080"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="buttonOnClick6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete your alarm"
        android:id="@+id/button3"
        android:layout_marginTop="40dp"
        android:textSize="28dp"
        android:width="320dp"
        android:height="100dp"
        android:background="#ffff3700"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="buttonOnClick7"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instruction"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginTop="20dp"
        android:background="#ff008080"
        android:textColor="#ffffffff"
        android:textSize="14dp"
        android:onClick="buttonOnClick5" />
</RelativeLayout>
